<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:id="@+id/coupon_ad_bg">

    <VideoView
        android:id="@+id/playerMedia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >
    </VideoView>

    <LinearLayout
        android:id="@+id/playerAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"
        android:background="@drawable/play_controller_bg" >

        <Button
            android:id="@+id/playerCannel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableTop="@drawable/ic_delete"
            android:text="Cancel"
            android:textSize="12sp"
            android:paddingTop="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/playerCenter"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" >

            <ProgressBar
                android:id="@+id/playerSeek"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/progressbar_color"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0"
                android:maxHeight="7dp"
                android:minHeight="2dp"
                android:indeterminateOnly="false"
                android:paddingTop="30dp" />

            <TextView
                android:id="@+id/playerTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00  /  00:15"
                android:gravity="center"
                android:textSize="10sp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="15dp" />

        </LinearLayout>

        <Button
            android:id="@+id/playerAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableTop="@drawable/ic_coupon_my"
            android:text="Add"
            android:textSize="12sp"
            android:paddingTop="20dp" />

    </LinearLayout>

</RelativeLayout>
